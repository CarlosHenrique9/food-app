<div class="min-h-screen bg-gray-100 py-20">
    <div class="container mx-auto px-6">
        <h1 class="text-5xl font-extrabold text-center text-gray-900 mb-12">Categoria</h1>
        <div class="flex justify-between mb-8">
            <div class="flex flex-col">
                <h2 class="text-2xl font-bold text-gray-800">Filtro</h2>
                <!-- Adicione aqui os filtros -->
            </div>
        </div>
        <div class="flex flex-wrap mt-6 gap-10 justify-center items-start">
            <% if @products.empty? %>
                <p class="text-2xl text-center text-gray-800">Nenhum produto encontrado</p>
            <% else %>
                <% @products.each do |product| %>
                    <%= link_to product_path(product), class: "group" do %>
                        <div class="max-w-xs flex flex-col p-6 bg-white rounded-lg shadow-lg hover:shadow-2xl transition-shadow duration-300 justify-center items-center">
                            <%= product.images.first ? image_tag(product.images.first.variant(:medium), class: "rounded-lg") : image_tag("http://via.placeholder.com/250", class:"rounded-lg") %>
                            <p class="mt-4 text-lg font-medium text-gray-900 group-hover:text-yellow-600 transition-colors duration-300">
                                <%= product.name %>
                            </p>
                        </div>
                    <% end %>
                <% end %>
            <% end %>
        </div>
    </div>
</div>
