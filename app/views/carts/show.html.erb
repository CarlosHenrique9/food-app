<div class="min-h-screen bg-gray-100 py-20">
  <div class="container mx-auto px-6">
    <h1 class="text-5xl font-extrabold text-center text-gray-900 mb-12">Carrinho de Compras</h1>
    <div data-controller="cart" class="bg-white p-8 rounded-lg shadow-lg">
      <div class="mt-4 font-medium text-lg text-gray-800" id="total" data-cart-target="total">Total: R$ 0,00</div>
      <div class="flex justify-between mt-8">
        <button class="py-3 px-6 bg-red-500 hover:bg-red-600 text-white font-bold rounded-full shadow-lg transform hover:scale-105 transition duration-300" data-action="click->cart#checkout">Finalizar Compra</button>
        <button class="py-3 px-6 bg-yellow-500 hover:bg-yellow-600 text-white font-bold rounded-full shadow-lg transform hover:scale-105 transition duration-300" data-action="click->cart#clear">Limpar Carrinho</button>
      </div>
    </div>
  </div>
</div>
<div id="errorContainer"></div>
