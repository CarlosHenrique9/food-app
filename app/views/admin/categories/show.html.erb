<div class="mx-auto md:w-2/3 w-full">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @admin_category %>

    <div class="mt-4">
      <%= link_to "Editar Categoria", edit_admin_category_path(@admin_category), class: "inline-block bg-gray-100 text-gray-800 rounded-lg py-3 px-5 font-medium hover:bg-gray-200" %>
      <%= link_to "Voltar para Categorias", admin_categories_path, class: "ml-2 inline-block bg-gray-100 text-gray-800 rounded-lg py-3 px-5 font-medium hover:bg-gray-200" %>
    </div>
    
    <div class="mt-4">
      <%= button_to "Excluir Categoria", admin_category_path(@admin_category), method: :delete, data: { confirm: "Tem certeza que deseja excluir esta categoria?" }, class: "inline-block bg-gray-100 text-gray-800 rounded-lg py-3 px-5 font-medium hover:bg-gray-200" %>
    </div>
  </div>
</div>
