
<!DOCTYPE html>
<html>
  <head>
    <title>Ecommerce</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-100">
    <main class="flex">
      <nav class="flex w-56">
        <div class="w-64 p-6 h-screen bg-red-600 sticky top-0">
            <div class="flex items-center mb-8">
                <%= image_tag "foodlogo.png", class: "w-16 h-16 rounded-full" %>
                <h1 class="text-lg py-2 ml-4 text-white font-bold hidden md:block">Taba's Burguer</h1>
            </div>
            <ul class="flex flex-col text-white space-y-2">
                <li>
                    <%= link_to admin_path, class:"block px-4 py-2 hover:rounded-lg hover:bg-red-700 transition duration-300" do %>
                        <%= icon('fa-solid', 'gauge-high') %> 
                        <span class="hidden md:inline-block ml-2">Dashboard</span>
                    <% end %>
                </li>
                <li>
                    <%= link_to admin_products_path, class:"block px-4 py-2 hover:rounded-lg hover:bg-red-700 transition duration-300" do %>
                        <%= icon('fa-solid', 'cart-shopping') %> 
                        <span class="hidden md:inline-block ml-2">Produtos</span>
                    <% end %>
                </li>
                <li>
                    <%= link_to admin_categories_path, class:"block px-4 py-2 hover:rounded-lg hover:bg-red-700 transition duration-300" do %>
                        <%= icon('fa-solid', 'list') %> 
                        <span class="hidden md:inline-block ml-2">Categorias</span>
                    <% end %>
                </li>
                <li>
                    <%= link_to admin_orders_path, class:"block px-4 py-2 hover:rounded-lg hover:bg-red-700 transition duration-300" do %>
                        <%= icon('fa-solid', 'truck-fast') %> 
                        <span class="hidden md:inline-block ml-2">Pedidos</span>
                    <% end %>
                </li>
                <li>
                    <%= link_to destroy_admin_session_path, data:{"turbo-method": "delete", "turbo-confirm": "Deseja sair do sistema?"}, class:"block px-4 py-2 hover:rounded-lg hover:bg-red-700 transition duration-300" do %>
                        <%= icon('fa-solid', 'sign-out') %> 
                        <span class="hidden md:inline-block ml-2">Sair</span>
                    <% end %>
                </li>
            </ul>
        </div>
      </nav>
      <div class="w-full p-8 bg-white min-h-screen">
        <%= yield %>
      </div>
    </main>
  </body>
</html>
