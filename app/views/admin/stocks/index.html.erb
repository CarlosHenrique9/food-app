<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Estoques" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Estoques</h1>
    <%= link_to "Novo estoque", new_admin_product_stock_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="admin_stocks" class="min-w-full mt-6">
    <% @admin_stocks.each do |admin_stock| %>
      <div class="bg-white shadow-md rounded-lg overflow-hidden mb-6">
        <div class="p-4">
          <p class="text-lg font-medium text-gray-800 mb-2"><%= admin_stock.product.name %></p>
          <div class="flex justify-between items-center">
            <p class="text-sm text-gray-600"><strong>Quantidade:</strong> <%= admin_stock.amount %></p>
            <p class="text-sm text-gray-600"><strong>Tamanho:</strong> <%= admin_stock.size %></p>
          </div>
          <div class="mt-2">
            <%= link_to "Ver este estoque", [:admin, admin_stock.product, admin_stock], class: "rounded-lg py-2 px-4 bg-gray-100 inline-block font-medium text-sm" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
